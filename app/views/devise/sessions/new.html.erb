<div class="col-md-4 col-md-offset-4">
       <%= notice %>
       <%= alert %>
    <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Login</h3>
        </div>
        <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:"", role:"form"}) do |f| %>
                <fieldset>
                    <div class="form-group">
                        <%= f.text_field :login, autofocus: true, placeholder: 'E-mail or Username', class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.password_field :password, autocomplete: "off", placeholder: 'Senha', class: 'form-control' %>
                    </div>
                    <div class="checkbox">
                      <label>
                            <%= f.check_box :remember_me %>
                            Lembre-se
                      </label>
                    </div>
                    <%= f.submit "Login", class: "btn btn-lg btn-success btn-block" %>
                </fieldset>   
            <% end %>
        </div>
    </div>
    <%= render "devise/shared/links" %>
</div>


